{
  "manifest_version": 3,
  "name": "Slack Msg Link Replacer Extension",
  "description": "Extension that will replace the word 'archives' to 'messages' for slack message links copied to the clipboard",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "clipboardRead",
    "clipboardWrite",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["copy_listener.js"]
    }
  ],
  "action": {
    "default_title": "Click to show an alert"
  },
  "icons": {
    "16": "icon-16.png",
    "32": "icon-32.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  }
}
