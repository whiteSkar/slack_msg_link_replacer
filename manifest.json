{
  "manifest_version": 3,
  "name": "Slack Msg Link Replacer Extension",
  "description": "Extension that will replace the 'slack.com/archives' to 'slack.com/messages' whenever the clipboard is updated,",
  "version": "1.0",
  "permissions": [
    "clipboardRead",
    "clipboardWrite"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["copy_listener.js"]
    }
  ],
  "action": {
    "default_popup": "main.html"
  },
  "icons": {
    "16": "icon-16.png",
    "32": "icon-32.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  }
}
