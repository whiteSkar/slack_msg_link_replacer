{
  "manifest_version": 3,
  "name": "Slack Msg Link Replacer Extension",
  "description": "Extension that will replace the word 'archives' to 'messages' for slack message links copied to the clipboard",
  "version": "1.0",
  "permissions": [],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://*.slack.com/*"],
      "js": ["oncopy.js"]
    }
  ],
  "action": {
    "default_popup": "main.html",
    "default_icon": "icon-16.png"
  },
  "icons": {
    "16": "icon-16.png",
    "32": "icon-32.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  }
}
